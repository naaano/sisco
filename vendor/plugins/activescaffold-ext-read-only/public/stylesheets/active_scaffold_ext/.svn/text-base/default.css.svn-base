/* multi-select */
.active-scaffold tbody.records tr.selecting td {background-color: #cdf}
.active-scaffold tbody.records tr.selected td {background-color: #bcf}
.active-scaffold tbody.records .selection {display:none}
.active-scaffold-header div.actions a.macro {
  background-position:1px 50%;
  background-repeat:no-repeat;
  padding-left:19px;
  background-image:url(../../../images/active_scaffold_ext/macro.png)
}

