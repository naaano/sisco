<% scope ||= nil %>
<dl id="<%= "field_#{column.name}" %>">
  <dt>
    <label for="<%= "record_#{column.name}" %>"><%= column.label %></label>
  </dt>
  <dd>
    <%= active_scaffold_input_for(column, scope) unless params[:batch] %>
    <%= batch_form_column_for(column) if params[:batch] and active_scaffold_config.batch_create.batch_columns.include?(column.name) %>
    <%= ignore_form_column_for(column) if params[:batch] and active_scaffold_config.batch_create.ignore_columns.include?(column.name) %>
    <% if column.description -%>
      <span class="description"><%= column.description %></span>
    <% end -%>
  </dd>
</dl>
